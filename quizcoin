    <script>
        const coinSchemas = {
            lydia: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><path d="M20 40 C 20 20, 80 20, 85 45 C 90 70, 30 90, 20 70 Z" class="fill-gold" /><path d="M40 45 Q 50 35 60 45 Q 50 55 40 45" stroke-width="2" /><path d="M42 43 A 1 1 0 1 0 44 43" fill="currentColor"/><path d="M56 43 A 1 1 0 1 0 58 43" fill="currentColor"/></svg>`,
            athens: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" class="fill-gold" /><path d="M40 40 L60 40 L50 70 Z" /><circle cx="43" cy="45" r="4" /><circle cx="57" cy="45" r="4" /><path d="M70 30 L75 45 M70 50 L75 65" /></svg>`,
            china: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" class="fill-gold" /><rect x="35" y="35" width="30" height="30" rx="2" /><path d="M50 15 V30 M50 70 V85 M15 50 H30 M70 50 H85" /></svg>`,
            taler: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" class="fill-gold" /><path d="M30 50 Q 50 20 70 50 Q 50 80 30 50" /><path d="M50 30 V70 M35 50 H65" stroke-dasharray="2 2" /></svg>`,
            denarius: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" class="fill-gold" /><path d="M35 30 Q 25 50 35 70 M65 30 Q 75 50 65 70" /><circle cx="50" cy="45" r="15" /><path d="M40 75 L60 75" /></svg>`,
            pieces8: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><path d="M25 25 L75 20 L85 75 L20 80 Z" class="fill-gold" /><path d="M40 30 V70 M60 30 V70" /><path d="M35 45 H65 M35 55 H65" /></svg>`,
            eagle: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" class="fill-gold" /><path d="M30 40 L50 20 L70 40 L50 80 Z" /><path d="M20 50 H80 M50 20 V80" stroke-opacity="0.3" /></svg>`,
            plate: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><rect x="15" y="15" width="70" height="70" rx="5" class="fill-gold" /><circle cx="25" cy="25" r="5" /><circle cx="75" cy="25" r="5" /><circle cx="25" cy="75" r="5" /><circle cx="75" cy="75" r="5" /><circle cx="50" cy="50" r="8" /></svg>`,
            yap: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" stroke-width="4" class="fill-gold" /><circle cx="50" cy="50" r="12" /><path d="M20 50 L35 50 M65 50 L80 50" stroke-width="3" /></svg>`,
            solidus: `<svg viewBox="0 0 100 100" class="w-40 h-40 coin-svg"><circle cx="50" cy="50" r="45" class="fill-gold" /><path d="M50 25 L60 50 L50 75 L40 50 Z" /><circle cx="50" cy="35" r="8" /><path d="M30 70 H70" /></svg>`
        };

        const questions = [
            { q: "Identify the oldest coin from Lydia (7th century BC). It had a distinct irregular nugget shape.", schema: "lydia", options: ["Lydian Lion", "Athenian Owl", "Roman Denarius", "Golden Nomisma"], correct: 0 },
            { q: "Behold the schematic of the famous Owl coin. In which city was it minted?", schema: "athens", options: ["Sparta", "Athens", "Thebes", "Carthage"], correct: 1 },
            { q: "A characteristic shape with a square hole. In which country were these coins used for over 2,000 years?", schema: "china", options: ["Japan", "India", "China", "Egypt"], correct: 2 },
            { q: "Schematic of the 'Joachimstaler'. This 16th-century coin gave its name to which modern currency?", schema: "taler", options: ["Pound", "Euro", "Dollar", "Franc"], correct: 2 },
            { q: "This schematic shows a Denarius with a laurel wreath. Which Empire owned this currency?", schema: "denarius", options: ["Greek", "Roman", "Ottoman", "Mongol"], correct: 1 },
            { q: "A crude 'cob' shape with two columns. These Spanish 'Pieces of Eight' were most famously used by whom?", schema: "pieces8", options: ["Vikings", "Knights", "Pirates", "Samurai"], correct: 2 },
            { q: "A gold coin featuring a soaring eagle. Which countryâ€™s currency does this represent?", schema: "eagle", options: ["United Kingdom", "Germany", "United States", "Russia"], correct: 2 },
            { q: "A heavy copper plate with stamps in the corners. Which country produced these coins weighing up to 19 kg?", schema: "plate", options: ["Sweden", "Canada", "Australia", "Brazil"], correct: 0 },
            { q: "Schematic of the Rai stone money. On which island did stones 3 meters in diameter serve as currency?", schema: "yap", options: ["Easter Island", "Yap", "Crete", "Taiwan"], correct: 1 },
            { q: "The Byzantine Golden Solidus. What nickname did it earn for remaining unchanged for centuries?", schema: "solidus", options: ["Gold Standard", "Bezant", "Eternal Coin", "Imperial Shield"], correct: 1 }
        ];

        let currentQ = 0, score = 0;

        function startGame() {
            document.getElementById('start-screen').classList.add('hidden');
            document.getElementById('game-screen').classList.remove('hidden');
            loadQuestion();
        }

        function loadQuestion() {
            const q = questions[currentQ];
            document.getElementById('q-counter').innerText = `Question ${currentQ + 1} / ${questions.length}`;
            document.getElementById('progress-bar').style.width = ((currentQ + 1) / questions.length * 100) + "%";
            document.getElementById('question-text').innerText = q.q;
            document.getElementById('coin-canvas').innerHTML = coinSchemas[q.schema];
            
            const container = document.getElementById('options-container');
            container.innerHTML = '';
            
            q.options.forEach((opt, i) => {
                const b = document.createElement('button');
                b.className = `answer-btn bg-stone-700/50 hover:bg-stone-700 border-stone-900 text-white p-5 rounded-2xl text-left font-bold flex items-center gap-4 transition-all`;
                b.innerHTML = `<span class="text-amber-500/50 font-black">${String.fromCharCode(65 + i)}.</span> ${opt}`;
                b.onclick = () => check(i, b);
                container.appendChild(b);
            });
        }

        function check(idx, btn) {
            const q = questions[currentQ];
            const btns = document.getElementById('options-container').children;
            for (let b of btns) b.disabled = true;

            if (idx === q.correct) {
                score += 100;
                btn.classList.replace('bg-stone-700/50', 'bg-emerald-600/80');
                btn.classList.add('ring-2', 'ring-emerald-400');
            } else {
                btn.classList.replace('bg-stone-700/50', 'bg-red-600/80');
                btns[q.correct].classList.add('ring-2', 'ring-amber-500', 'bg-stone-700');
            }

            document.getElementById('score-badge').innerText = `Score: ${score}`;

            setTimeout(() => {
                currentQ++;
                if (currentQ < questions.length) loadQuestion();
                else finish();
            }, 1500);
        }

        function finish() {
            document.getElementById('game-screen').classList.add('hidden');
            document.getElementById('result-screen').classList.remove('hidden');
            document.getElementById('final-score').innerText = score;
        }
    </script>
</body>
